{% use "tailwind_2_layout.html.twig" %}

{# Form row styling - completely override the parent block to remove any default margins #}
{%- block form_row -%}
  <div class="{{ row_class|default('') }}">
    {{- form_label(form) -}}
    {{- form_widget(form) -}}
    {{- form_help(form) -}}
    {{- form_errors(form) -}}
  </div>
{%- endblock -%}

{# Basic input styling #}
{%- block widget_attributes -%}
  {%- set widget_class =
    widget_class|default(
      'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6'
    )
  -%}
  {%- set widget_disabled_class =
    widget_disabled_class|default('bg-gray-100 cursor-not-allowed')
  -%}
  {%- set widget_errors_class =
    widget_errors_class|default(
      'outline-red-300 text-red-900 placeholder-red-300 focus:outline-red-500'
    )
  -%}
  {{- parent() -}}
{%- endblock -%}

{# Label styling #}
{%- block form_label -%}
  {%- set label_class =
    label_class|default('block text-sm/6 font-medium text-gray-900')
  -%}
  {{- parent() -}}
{%- endblock -%}

{# Help text styling #}
{%- block form_help -%}
  {%- set help_class = help_class|default('mt-2 text-sm/6 text-gray-600') -%}
  {{- parent() -}}
{%- endblock -%}

{# Error styling #}
{%- block form_errors -%}
  {%- set error_item_class =
    error_item_class|default('mt-2 text-sm text-red-600')
  -%}
  {{- parent() -}}
{%- endblock -%}

{# Textarea styling #}
{%- block textarea_widget -%}
  {%- set attr =
    attr|merge({
      class: ((attr.class|default(''))
        ~ ' block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6')|trim
    })
  -%}
  {{- parent() -}}
{%- endblock -%}

{# Checkbox styling #}
{%- block checkbox_widget -%}
  {%- set attr =
    attr|merge({
      class: ((attr.class|default(''))
        ~ ' col-start-1 row-start-1 appearance-none rounded-sm border border-gray-300 bg-white checked:border-indigo-600 checked:bg-indigo-600 indeterminate:border-indigo-600 indeterminate:bg-indigo-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 disabled:border-gray-300 disabled:bg-gray-100 disabled:checked:bg-gray-100 forced-colors:appearance-auto')|trim
    })
  -%}
  <div class="group grid size-4 grid-cols-1">
    {{- parent() -}}
    <svg viewBox="0 0 14 14"
      fill="none"
      class="pointer-events-none col-start-1 row-start-1 size-3.5 self-center justify-self-center stroke-white group-has-disabled:stroke-gray-950/25">
      <path d="M3 8L6 11L11 3.5"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="opacity-0 group-has-checked:opacity-100" />
      <path d="M3 7H11"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="opacity-0 group-has-indeterminate:opacity-100" />
    </svg>
  </div>
{%- endblock -%}

{# Radio button styling #}
{%- block radio_widget -%}
  {%- set attr =
    attr|merge({
      class: ((attr.class|default(''))
        ~ ' relative size-4 appearance-none rounded-full border border-gray-300 bg-white before:absolute before:inset-1 before:rounded-full before:bg-white not-checked:before:hidden checked:border-indigo-600 checked:bg-indigo-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 disabled:border-gray-300 disabled:bg-gray-100 disabled:before:bg-gray-400 forced-colors:appearance-auto forced-colors:before:hidden')|trim
    })
  -%}
  {{- parent() -}}
{%- endblock -%}

{# Select styling #}
{%- block choice_widget_collapsed -%}
  {%- set attr =
    attr|merge({
      class: ((attr.class|default(''))
        ~ ' col-start-1 row-start-1 w-full appearance-none rounded-md bg-white py-1.5 pr-8 pl-3 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6')|trim
    })
  -%}
  <div class="grid grid-cols-1">
    {{- parent() -}}
    <svg viewBox="0 0 16 16"
      fill="currentColor"
      data-slot="icon"
      aria-hidden="true"
      class="pointer-events-none col-start-1 row-start-1 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4">
      <path d="M4.22 6.22a.75.75 0 0 1 1.06 0L8 8.94l2.72-2.72a.75.75 0 1 1 1.06 1.06l-3.25 3.25a.75.75 0 0 1-1.06 0L4.22 7.28a.75.75 0 0 1 0-1.06Z"
        clip-rule="evenodd"
        fill-rule="evenodd" />
    </svg>
  </div>
{%- endblock -%}

{# File input styling #}
{%- block file_widget -%}
  {%- set attr =
    attr|merge({
      class: ((attr.class|default('')) ~ ' sr-only')|trim
    })
  -%}
  <div class="mt-2 flex justify-center rounded-lg border border-dashed border-gray-900/25 px-6 py-10">
    <div class="text-center">
      <svg viewBox="0 0 24 24"
        fill="currentColor"
        data-slot="icon"
        aria-hidden="true"
        class="mx-auto size-12 text-gray-300">
        <path d="M1.5 6a2.25 2.25 0 0 1 2.25-2.25h16.5A2.25 2.25 0 0 1 22.5 6v12a2.25 2.25 0 0 1-2.25 2.25H3.75A2.25 2.25 0 0 1 1.5 18V6ZM3 16.06V18c0 .414.336.75.75.75h16.5A.75.75 0 0 0 21 18v-1.94l-2.69-2.689a1.5 1.5 0 0 0-2.12 0l-.88.879.97.97a.75.75 0 1 1-1.06 1.06l-5.16-5.159a1.5 1.5 0 0 0-2.12 0L3 16.061Zm10.125-7.81a1.125 1.125 0 1 1 2.25 0 1.125 1.125 0 0 1-2.25 0Z"
          clip-rule="evenodd"
          fill-rule="evenodd" />
      </svg>
      <div class="mt-4 flex text-sm/6 text-gray-600">
        <label for="{{ id }}"
          class="relative cursor-pointer rounded-md bg-white font-semibold text-indigo-600 focus-within:ring-2 focus-within:ring-indigo-600 focus-within:ring-offset-2 focus-within:outline-hidden hover:text-indigo-500">
          <span>Upload a file</span>
          {{- parent() -}}
        </label>
        <p class="pl-1">
          or drag and drop
        </p>
      </div>
      <p class="text-xs/5 text-gray-600">
        PNG, JPG, GIF up to 10MB
      </p>
    </div>
  </div>
{%- endblock -%}

{# Checkbox row styling - completely override the parent block #}
{%- block checkbox_row -%}
  <div class="{{ row_class|default('flex gap-3') }}">
    <div class="flex h-6 shrink-0 items-center">
      {{- form_widget(form) -}}
    </div>
    <div class="text-sm/6">
      {{- form_label(form) -}}
      {% if form.vars.help is defined and form.vars.help %}
        <p id="{{ form.vars.id }}-description" class="text-gray-500">
          {{ form.vars.help }}
        </p>
      {% endif %}
      {{- form_errors(form) -}}
    </div>
  </div>
{%- endblock -%}

{# Radio row styling - completely override the parent block #}
{%- block radio_row -%}
  <div class="{{ row_class|default('flex items-center gap-x-3') }}">
    {{- form_widget(form) -}}
    {{- form_label(form) -}}
    {{- form_errors(form) -}}
  </div>
{%- endblock -%}

{# Form section styling #}
{%- block form_section -%}
  <div class="border-b border-gray-900/10 pb-12">
    {% if title is defined and title %}
      <h2 class="text-base/7 font-semibold text-gray-900">
        {{ title }}
      </h2>
    {% endif %}
    {% if description is defined and description %}
      <p class="mt-1 text-sm/6 text-gray-600">
        {{ description }}
      </p>
    {% endif %}
    <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
      {{ content|raw }}
    </div>
  </div>
{%- endblock -%}

{# Form fieldset styling #}
{%- block fieldset_row -%}
  <fieldset>
    {% if legend is defined and legend %}
      <legend class="text-sm/6 font-semibold text-gray-900">
        {{ legend }}
      </legend>
    {% endif %}
    {% if description is defined and description %}
      <p class="mt-1 text-sm/6 text-gray-600">
        {{ description }}
      </p>
    {% endif %}
    <div class="mt-6 space-y-6">
      {{ content|raw }}
    </div>
  </fieldset>
{%- endblock -%}

{# Button styling #}
{%- block button_widget -%}
  {%- set attr =
    attr|merge({
      class: ((attr.class|default(''))
        ~ ' rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600')|trim
    })
  -%}
  {{- parent() -}}
{%- endblock -%}

{# Secondary button styling #}
{%- block button_widget_secondary -%}
  {%- set attr =
    attr|merge({
      class: ((attr.class|default(''))
        ~ ' rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50')|trim
    })
  -%}
  <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>
    {{ label|trans({}, translation_domain) }}
  </button>
{%- endblock -%}

{# Text button styling #}
{%- block button_widget_text -%}
  {%- set attr =
    attr|merge({
      class: ((attr.class|default(''))
        ~ ' text-sm/6 font-semibold text-gray-900')|trim
    })
  -%}
  <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>
    {{ label|trans({}, translation_domain) }}
  </button>
{%- endblock -%}

{# Form actions styling #}
{%- block form_actions -%}
  <div class="mt-6 flex items-center justify-end gap-x-6">
    {{ content|raw }}
  </div>
{%- endblock -%}
