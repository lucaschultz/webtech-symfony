{% extends 'app-layout.html.twig' %}

{% form_theme form 'form/tailwind_custom.html.twig' %}

{% block content %}
  <div class="sm:flex sm:items-center mb-6">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-bold">
        Create Task
      </h1>
      <p class="mt-2 text-sm text-gray-700">
        Create a new task for your team
      </p>
    </div>
  </div>

  <div>
    {{ form_start(form, {
      'action': path('app_task_new', {
        'redirectTo': app.request.query.get('redirectTo')
      })
    }) }}
    {{ form_errors(form) }}

    <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-full">
        {{ form_row(form.title) }}
      </div>

      <div class="col-span-full">
        {{ form_row(form.description) }}
      </div>

      <div class="sm:col-span-1">
        {{ form_row(form.team) }}
      </div>

      <div class="sm:col-span-1">
        {{ form_row(form.assignedTo) }}
      </div>

      <div class="sm:col-span-1">
        {{ form_row(form.status) }}
      </div>

      <div class="sm:col-span-1">
        {{ form_row(form.priority) }}
      </div>

      <div class="sm:col-span-1">
        {{ form_row(form.deadline) }}
      </div>
    </div>

    <div class="mt-8 flex items-center justify-end gap-x-6">
      <a href="{% if app.request.query.get('redirectTo') %}{{ app.request.query.get('redirectTo') }}{% else %}{{ path('app_tasks_list') }}{% endif %}"
        class="text-sm/6 font-semibold text-gray-900 px-3 py-2 rounded-md focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 hover:bg-gray-100 focus-visible:bg-gray-100">
        Cancel
      </a>
      <button type="submit"
        class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
        Create Task
      </button>
    </div>

    {{ form_end(form) }}
  </div>
{% endblock %}
