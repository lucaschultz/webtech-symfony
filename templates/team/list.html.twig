{% extends 'app-layout.html.twig' %}

{% block content %}
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center justify-between">
    <div class="flex-auto max-w-2xl text-pretty">
      <h1 class="text-base font-semibold text-gray-900">
        Teams
      </h1>
      <p class="mt-2 text-base text-gray-600">
        All teams that you are a member of or own are listed here. You can view
        team details, edit or delete teams, and create new ones.
      </p>
    </div>
    <a href="{{ path('app_team_new') }}" class="btn-style-primary btn-size-md">
      New Team
    </a>
  </div>

  {% if teams is empty %}
    <div class="mt-8">
      <button type="button"
        onclick="window.location.href='{{ path('app_team_new') }}'"
        class="relative block w-full rounded-lg border-2 border-dashed border-gray-300 p-12 text-center hover:border-gray-400 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-hidden">
        <svg xmlns="http://www.w3.org/2000/svg"
          fill="none"
          class="mx-auto size-12 text-gray-400"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor">
          <path stroke-linecap="round"
            stroke-linejoin="round"
            d="M16.5 9.75V6.75A2.25 2.25 0 0 0 14.25 4.5h-4.5A2.25 2.25 0 0 0 7.5 6.75v3M3.75 8.25h16.5m-14.25 6v-2.25a.75.75 0 0 1 .75-.75h10.5a.75.75 0 0 1 .75.75V14.25A2.25 2.25 0 0 1 16.5 16.5h-9A2.25 2.25 0 0 1 5.25 14.25Z" />
        </svg>
        <span class="mt-2 block text-sm font-semibold text-gray-900">
          Create a new team
        </span>
      </button>
    </div>
  {% else %}
    <div class="mt-8 flow-root">
      <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
          <table class="min-w-full divide-y divide-gray-200">
            <thead>
              <tr>
                <th class="py-3.5 pr-3 pl-4 text-left text-sm font-semibold text-gray-900 sm:pl-0 whitespace-nowrap">
                  Team Name
                </th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">
                  Description
                </th>
                <th class="hidden px-3 py-3.5 text-left text-sm font-semibold text-gray-900 md:table-cell whitespace-nowrap">
                  Members
                </th>
                <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900 whitespace-nowrap">
                  Created
                </th>
                <th class="relative py-3.5 pr-0 pl-3">
                  <span class="sr-only">Actions</span>
                </th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              {% for team in teams %}
                <tr>
                  <td class="py-4 pr-3 pl-4 text-sm font-medium whitespace-nowrap text-gray-900 sm:pl-0">
                    {% if is_granted(TEAM_VIEW, team) %}
                      <a href="{{
                        path(
                          'app_team_show',
                          {
                            id: team.id
                          }
                        )
                        }}"
                        class="hover:text-indigo-600 rounded-sm hover:underline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                        {{ team.name }}
                      </a>
                    {% else %}
                      {{ team.name }}
                    {% endif %}
                    <dl class="font-normal md:hidden">
                      <div>
                        <dt class="sr-only">
                          Members
                        </dt>
                        <dd class="mt-1 truncate text-gray-600">
                          {{ team.users|length }} member{% if
                            (team.users|length) != 1 %}s{% endif %}
                        </dd>
                      </div>
                    </dl>
                  </td>
                  <td class="px-3 py-4 text-sm text-gray-600">
                    <div class="max-w-3xs lg:max-w-2xs xl:max-w-md truncate">
                      {% if team.description %}
                        {{ team.description|nl2br }}
                      {% else %}
                        <span class="text-gray-400">
                          No description provided
                        </span>
                      {% endif %}
                    </div>
                  </td>
                  <td class="hidden px-3 py-4 text-sm whitespace-nowrap text-gray-600 md:table-cell">
                    {{ team.users|length }} member{% if
                      (team.users|length) != 1 %}s{% endif %}
                  </td>
                  <td class="px-3 py-4 text-sm whitespace-nowrap text-gray-600">
                    {{ team.createdAt|date('M j, Y') }}
                  </td>
                  <td class="relative py-4 pr-4 pl-3 text-right text-sm whitespace-nowrap sm:pr-0">
                    {% set hasTeamActions = is_granted(TEAM_VIEW, team)
                      or is_granted(TEAM_EDIT, team)
                      or is_granted(TEAM_DELETE, team)
                    %}
                    {% if hasTeamActions %}
                      <el-dropdown class="dropdown">
                        <button class="btn-style-ghost btn-size-sm">
                          <span class="absolute -inset-2.5"></span>
                          <span class="sr-only">Team options</span>
                          <svg viewBox="0 0 20 20"
                            fill="currentColor"
                            data-slot="icon"
                            aria-hidden="true"
                            class="size-5">
                            <path d="M10 3a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM10 8.5a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM11.5 15.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0Z" />
                          </svg>
                        </button>
                        <el-menu anchor="bottom end"
                          popover
                          class="dropdown-menu">
                          {% if is_granted(TEAM_VIEW, team) %}
                            <a href="{{
                              path(
                                'app_team_show',
                                {
                                  id: team.id
                                }
                              )
                              }}"
                              class="dropdown-item">
                              View<span class="sr-only">, {{ team.name }}</span>
                            </a>
                          {% endif %}
                          {% if is_granted(TEAM_EDIT, team) %}
                            <a href="{{
                              path(
                                'app_team_edit',
                                {
                                  id: team.id
                                }
                              )
                              }}"
                              class="dropdown-item">
                              Edit<span class="sr-only">, {{ team.name }}</span>
                            </a>
                          {% endif %}
                          {% if is_granted(TEAM_DELETE, team) %}
                            <button command="show-modal"
                              commandfor="delete-dialog-{{ team.id }}"
                              class="dropdown-item-destructive">
                              Delete<span class="sr-only">, {{ team.name }}</span>
                            </button>
                          {% endif %}
                        </el-menu>
                      </el-dropdown>
                    {% endif %}
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  {% endif %}

  {# Delete Confirmation Modals - Only for teams user can delete #}
  {% for team in teams %}
    {% if is_granted(TEAM_DELETE, team) %}
      <el-dialog>
        <dialog id="delete-dialog-{{ team.id }}"
          aria-labelledby="dialog-title-{{ team.id }}"
          class="fixed inset-0 size-auto max-h-none max-w-none overflow-y-auto bg-transparent backdrop:bg-transparent">
          <el-dialog-backdrop class="backdrop"></el-dialog-backdrop>
          <div tabindex="0"
            class="flex min-h-full items-end justify-center p-4 text-center focus:outline-none sm:items-center sm:p-0">
            <el-dialog-panel class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all data-closed:translate-y-4 data-closed:opacity-0 data-enter:duration-200 data-enter:ease-out data-leave:duration-100 data-leave:ease-in sm:my-8 sm:w-full sm:max-w-lg data-closed:sm:translate-y-0 data-closed:sm:scale-95">
              <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                  <div class="mx-auto flex size-12 shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:size-10">
                    <svg viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1.5"
                      data-slot="icon"
                      aria-hidden="true"
                      class="size-6 text-red-600">
                      <path d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z"
                        stroke-linecap="round"
                        stroke-linejoin="round" />
                    </svg>
                  </div>
                  <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                    <h3 id="dialog-title-{{ team.id }}"
                      class="text-base font-semibold text-gray-900">
                      Delete Team
                    </h3>
                    <div class="mt-2">
                      <p class="text-sm text-gray-600">
                        Are you sure you want to delete "{{ team.name }}"? This
                        action cannot be undone and will remove all team
                        members.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="border-t border-gray-200 px-4 py-3 flex flex-col justify-end sm:flex-row sm:px-6 gap-2">
                <button type="button"
                  autofocus
                  command="close"
                  commandfor="delete-dialog-{{ team.id }}"
                  class="btn-style-ghost btn-size-md">
                  Cancel
                </button>
                <form method="POST"
                  action="{{
                  path(
                    'app_team_delete',
                    {
                      id: team.id
                    }
                  )
                  }}">
                  <button type="submit"
                    class="btn-style-destructive btn-size-md w-full">
                    Delete
                  </button>
                </form>
              </div>
            </el-dialog-panel>
          </div>
        </dialog>
      </el-dialog>
    {% endif %}
  {% endfor %}
{% endblock %}
