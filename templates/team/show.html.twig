{% extends 'app-layout.html.twig' %}

{% block content %}
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-bold">
        {{ team.name }}
      </h1>
      <p class="mt-2 text-sm text-gray-700">
        {% if team.description %}
          {{ team.description|nl2br }}
        {% else %}
          <span class="text-gray-400">
            No description provided for this team
          </span>
        {% endif %}
      </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex space-x-3">
      <a href="{{
        path(
          'app_team_edit',
          {
            id: team.id
          }
        )
        }}"
        class="rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
        Edit
      </a>
      <a href="{{ path('app_team_new') }}"
        class="rounded-md bg-gray-100 px-3 py-2 text-center text-sm font-semibold text-indigo-600 shadow-xs hover:bg-gray-200 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
        Create Another Team
      </a>
    </div>
  </div>

  <div class="mt-6">
    <div class="border-t border-gray-100">
      <dl class="divide-y divide-gray-100">
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium text-gray-900">
            Members
          </dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0">
            {% if (team.users|length) > 0 %}
              <ul class="list-disc pl-4">
                {% for member in team.users %}
                  <li>
                    {{ member.firstName }} {{ member.lastName }}
                    <span class="text-gray-500 text-xs">
                      ({{ member.email }})
                    </span>
                  </li>
                {% endfor %}
              </ul>
            {% else %}
              <span class="text-gray-400">No members yet.</span>
            {% endif %}
          </dd>
        </div>

        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium text-gray-900">
            Created at
          </dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0">
            {{ team.createdAt|date('F j, Y, g:i a') }}
          </dd>
        </div>

        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
          <dt class="text-sm font-medium text-gray-900">
            Last updated
          </dt>
          <dd class="mt-1 text-sm text-gray-700 sm:col-span-2 sm:mt-0">
            {{ team.updatedAt|date('F j, Y, g:i a') }}
          </dd>
        </div>
      </dl>
    </div>
  </div>
{% endblock %}
