{% extends 'app-layout.html.twig' %}

{% form_theme form 'form/tailwind_custom.html.twig' %}

{% block content %}
  <div class="sm:flex sm:items-center mb-6">
    <div class="sm:flex-auto">
      <h1 class="text-2xl font-bold">
        Edit Team
      </h1>
      <p class="mt-2 text-sm text-gray-700">
        Change the team's name, description, or members
      </p>
    </div>
  </div>

  {% for msg in app.flashes('success') %}
    <div class="mb-4 px-4 py-2 bg-green-100 text-green-800 rounded">
      {{ msg }}
    </div>
  {% endfor %}

  <div>
    {{
      form_start(
        form,
        {
          action: path(
            'app_team_edit',
            {
              id: team.id
            }
          )
        }
      )
    }}
    {{ form_errors(form) }}

    <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-full">
        {{ form_row(form.name) }}
      </div>

      <div class="col-span-full">
        {{ form_row(form.description) }}
      </div>

      <div class="sm:col-span-full">
        <label class="block text-sm font-medium text-gray-900 mb-2">
          Members
        </label>
        <div class="flex flex-col gap-2">
          {% for checkbox in form.users %}
            <label class="inline-flex items-center gap-2">
              {{ form_widget(checkbox) }}
              {{ form_label(checkbox) }}
            </label>
          {% endfor %}
        </div>
        {{ form_errors(form.users) }}
      </div>
    </div>

    <div class="mt-8 flex items-center justify-end gap-x-6">
      <a href="{{
        path(
          'app_team_show',
          {
            id: team.id
          }
        )
        }}"
        class="text-sm font-semibold text-gray-900 px-3 py-2 rounded-md focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 hover:bg-gray-100">
        Cancel
      </a>
      <button type="submit"
        class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
        Save Changes
      </button>
    </div>

    {{ form_end(form) }}
  </div>
{% endblock %}
