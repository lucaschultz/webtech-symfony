{% extends 'base.html.twig' %}

{% block title %}
  Home
{% endblock %}

{% block body %}
  <div class="min-h-screen flex flex-col items-center justify-center bg-white space-y-8">
    <h1>
      {% include 'app-logo.html.twig' %}
    </h1>

    <div class="flex flex-col gap-4 w-full max-w-xs">
      <a href="{{ path('app_login') }}"
        class="w-full btn-style-primary btn-size-md">
        Login
      </a>
      <p class="mt-10 text-center text-sm text-gray-500">
        Don't have an account?
        <a href="{{ path('app_register') }}"
          class="focusable rounded-sm font-medium text-indigo-600 hover:text-indigo-500">
          Register
        </a>
      </p>
    </div>
  </div>
{% endblock %}
